---
const { lang = "en" } = Astro.props;

const content = {
    en: {
        title: "Our Services",
        subtitle:
            "Comprehensive solutions to boost your local business presence",
    },
    hu: {
        title: "Szolgáltatásaink",
        subtitle: "Átfogó megoldások a helyi üzleti jelenlét növelésére",
    },
    ro: {
        title: "Serviciile Noastre",
        subtitle:
            "Soluții complete pentru a crește prezența afacerii tale locale",
    },
};

const services = {
    en: [
        {
            title: "Google Business Profile Optimization",
            desc: "We’ll help you claim and optimize your Google Business Profile, ensuring your business details are consistent and easy to find.",
            icon: "ri-map-pin-user-line",
            img: "/images/business_listing_management.png",
        },
        {
            title: "Review Automation for Small Business",
            desc: "Start building real trust with your customers through automated reviews that boost your local reputation and search rankings.",
            icon: "ri-chat-check-line",
            img: "/images/social_media_optimization.png",
        },
        {
            title: "GEO & SGE Visibility Enhancement",
            desc: "Stay ahead of the curve with GEO and SGE strategies designed specifically to help local businesses grow.",
            icon: "ri-ai-generate",
            img: "/images/local_seo_enhancement.png",
        },
    ],
    // For now using English content for other languages as placeholder, user can update later or I can translate if needed.
    // The prompt said "3 languages", I should probably translate these titles at least.
    hu: [
        {
            title: "Google Cégem Optimalizálás",
            desc: "Segítünk Google Cégem profilja beállításában és optimalizálásában, hogy vállalkozása adatai mindig pontosak és könnyen megtalálhatóak legyenek.",
            icon: "ri-map-pin-user-line",
            img: "/images/business_listing_management.png",
        },
        {
            title: "Vélemény Automatizálás",
            desc: "Építsen valódi bizalmat ügyfeleivel az automatizált véleménygyűjtés segítségével, amely javítja hírnevét és keresési helyezéseit.",
            icon: "ri-chat-check-line",
            img: "/images/social_media_optimization.png",
        },
        {
            title: "GEO & SGE Láthatóság",
            desc: "Maradjon lépéselőnyben a kifejezetten helyi vállalkozások növekedésére szabott GEO és SGE stratégiáinkkal.",
            icon: "ri-ai-generate",
            img: "/images/local_seo_enhancement.png",
        },
    ],
    ro: [
        {
            title: "Digitalizare IMM & Google Business Profile",
            desc: "Te ajutăm să revendici și să optimizezi profilul Google, asigurându-ne că datele afacerii tale sunt corecte și ușor de găsit.",
            icon: "ri-map-pin-user-line",
            img: "/images/business_listing_management.png",
        },
        {
            title: "Automatizarea Recenziilor",
            desc: "Construiește o relație de încredere cu clienții tăi prin recenzii automatizate care îți îmbunătățesc reputația și poziția în căutări.",
            icon: "ri-chat-check-line",
            img: "/images/social_media_optimization.png",
        },
        {
            title: "Vizibilitate GEO & SGE",
            desc: "Fii cu un pas înainte folosind strategii GEO și SGE create special pentru a susține creșterea afacerilor locale.",
            icon: "ri-ai-generate",
            img: "/images/local_seo_enhancement.png",
        },
    ],
};

const t = content[lang as keyof typeof content] || content.en;
const list = services[lang as keyof typeof services] || services.en;
---

<section id="services" class="py-24 bg-gradient-to-b from-white to-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">{t.title}</h2>
            <p class="text-lg text-gray-600">{t.subtitle}</p>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
            {
                list.map((service) => (
                    <div class="bg-white p-8 rounded-lg shadow-sm hover:shadow-xl transition-shadow duration-300 border border-gray-100">
                        <div class="mb-8">
                            <img
                                src={service.img}
                                alt={service.title}
                                class="w-full h-48 object-cover rounded-lg mb-6"
                            />
                            <div class="w-12 h-12 flex items-center justify-center bg-purple-100 rounded-lg mb-6">
                                <i
                                    class={`${service.icon} icon-gradient text-2xl`}
                                />
                            </div>
                            <h3 class="text-xl font-semibold mb-4">
                                {service.title}
                            </h3>
                            <p class="text-gray-600">{service.desc}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
