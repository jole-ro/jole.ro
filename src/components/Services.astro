        subtitle:
            "Poziționarea brandului tău pentru piața europeană cu expertiză locală",
    },
};

const services = {
    en: [
        {
            title: "European Multilanguage SEO",
            desc: "Expert SEO strategies tailored for multiple European markets, ensuring your content resonates across borders and languages.",
            icon: "ri-global-line",
            img: "/images/business_listing_management.png",
        },
        {
            title: "Local Trust Signals & Reputation",
