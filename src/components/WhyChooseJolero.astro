---
const {
    lang = "en",
    isGrid = true,
    showHeader = true,
    headingLevel = "h3",
} = Astro.props;

const content = {
    en: {
        title: "Why Choose Jolero?",
        items: [
            {
                title: "Consolidated European Success",
                desc: "Over 10 years of confirmed results in managing multilanguage campaigns and building undisputed authority across Europe.",
                icon: "ri-medal-line",
            },
            {
                title: "Deep European Market Expertise",
                desc: "We understand cultural nuances and local market dynamics, eliminating barriers to international success.",
                icon: "ri-customer-service-line",
            },
            {
                title: "Cutting-Edge AI Strategies",
                desc: "Specialized in GEO and SGE visibility, we ensure your brand remains at the forefront of digital innovation.",
                icon: "ri-rocket-line",
            },
            {
                title: "High-Quality Lead Gen",
                desc: "We transform your online presence into a strategic asset that attracts valuable partners and customers globally.",
                icon: "ri-line-chart-line",
            },
        ],
    },
    hu: {
        title: "Miért válassza a Jolero-t?",
        items: [
            {
                title: "Megalapozott európai siker",
                desc: "Több mint 10 év igazolt eredmény többnyelvű kampányok kezelésében és vitathatatlan tekintély építésében egész Európában.",
                icon: "ri-medal-line",
            },
            {
                title: "Mély európai piaci szaktudás",
                desc: "Értjük a kulturális finomságokat és a helyi piaci dinamikát, elhárítva a nemzetközi siker útjában álló akadályokat.",
                icon: "ri-customer-service-line",
            },
            {
                title: "Élvonalbeli AI stratégiák",
                desc: "A GEO és SGE láthatóságra szakosodva biztosítjuk, hogy márkája a digitális innováció élvonalában maradjon.",
                icon: "ri-rocket-line",
            },
            {
                title: "Minőségi ügyfélszerzés",
                desc: "Online jelenlétét stratégiai eszközzé alakítjuk, amely értékes globális partnereket és ügyfeleket vonz.",
                icon: "ri-line-chart-line",
            },
        ],
    },
    ro: {
        title: "De ce să alegi Jolero?",
        items: [
            {
                title: "Succes European Consolidat",
                desc: "Peste 10 ani de rezultate confirmate în gestionarea campaniilor multilingve și construirea unei autorități incontestabile.",
                icon: "ri-medal-line",
            },
            {
                title: "Expertiză Profundă pe Piața Europeană",
                desc: "Înțelegem nuanțele culturale și dinamica piețelor locale, eliminând barierele în calea succesului internațional.",
                icon: "ri-customer-service-line",
            },
            {
                title: "Strategii AI de Vârf",
                desc: "Specializați în vizibilitate GEO și SGE, ne asigurăm că brandul tău rămâne în avangarda inovației digitale.",
                icon: "ri-rocket-line",
            },
            {
                title: "Generare de Lead-uri de Calitate",
                desc: "Transformăm prezența ta online într-un activ strategic care atrage parteneri și clienți valoroși la nivel global.",
                icon: "ri-line-chart-line",
            },
        ],
    },
};

const t = content[lang as keyof typeof content] || content.en;
const TitleTag = headingLevel as any;
---

<div>
    {
        showHeader && (
            <TitleTag
                class={`font-bold text-gray-900 mb-6 ${isGrid ? "text-3xl text-center" : "text-xl font-pacifico"}`}
            >
                {t.title}
            </TitleTag>
        )
    }

    {
        isGrid ? (
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                {t.items.map((item) => (
                    <div class="text-center transform hover:-translate-y-2 transition-transform duration-300">
                        <div class="w-16 h-16 flex items-center justify-center bg-gradient-to-br from-purple-100 to-pink-100 rounded-full mx-auto mb-6">
                            <i class={`${item.icon} icon-gradient text-3xl`} />
                        </div>
                        <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
                        <p class="text-gray-600">{item.desc}</p>
                    </div>
                ))}
            </div>
        ) : (
            <div class="grid gap-6">
                {t.items.map((item) => (
                    <div class="flex gap-4 items-start">
                        <div class="w-10 h-10 flex-shrink-0 rounded-full bg-purple-100 flex items-center justify-center">
                            <i class={`${item.icon} text-xl icon-gradient`} />
                        </div>
                        <div>
                            <h4 class="font-medium text-gray-900 mb-1">
                                {item.title}
                            </h4>
                            <p class="text-gray-700 text-sm">{item.desc}</p>
                        </div>
                    </div>
                ))}
            </div>
        )
    }
</div>
