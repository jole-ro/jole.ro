---
const {
    lang = "en",
    isGrid = true,
    showHeader = true,
    headingLevel = "h3",
} = Astro.props;

const content = {
    en: {
        title: "Why Choose Jolero?",
        items: [
            {
                title: "Proven Local SEO Success",
                desc: "We've spent over 10 years managing business listings and building the local trust signals that drive real results.",
                icon: "ri-medal-line",
            },
            {
                title: "Client-Focused Expertise",
                desc: "For over 5 years, we've worked side-by-side with local businesses to help them overcome visibility and reputation challenges.",
                icon: "ri-customer-service-line",
            },
            {
                title: "Future-Ready Strategies",
                desc: "We specialize in GEO and SGE Visibility for local businesses, helping you stay ahead of the latest AI search trends.",
                icon: "ri-rocket-line",
            },
            {
                title: "Local Lead Generation",
                desc: "Our data-driven strategies are designed to turn your online presence into a reliable customer-generating machine.",
                icon: "ri-line-chart-line",
            },
        ],
    },
    hu: {
        title: "Miért válassza a Jolero-t?",
        items: [
            {
                title: "Bizonyított helyi SEO siker",
                desc: "Több mint 10 évet töltöttünk üzleti adatlapok kezelésével és olyan bizalmi jelek építésével, amelyek valódi növekedést hoznak.",
                icon: "ri-medal-line",
            },
            {
                title: "Ügyfélközpontú szakértelem",
                desc: "Több mint 5 éve dolgozunk együtt helyi vállalkozásokkal, segítve őket a láthatósági és hírnév-építési kihívások leküzdésében.",
                icon: "ri-customer-service-line",
            },
            {
                title: "Jövőálló stratégiák",
                desc: "A GEO és SGE láthatóságra szakosodtunk, így segítünk vállalkozásának, hogy az AI alapú keresésekben is az élen maradjon.",
                icon: "ri-rocket-line",
            },
            {
                title: "Helyi ügyfélszerzés",
                desc: "Adatvezérelt stratégiáinkat úgy terveztük, hogy az Ön online jelenlétét megbízható ügyfélmágnessé alakítsák.",
                icon: "ri-line-chart-line",
            },
        ],
    },
    ro: {
        title: "De ce să alegi Jolero?",
        items: [
            {
                title: "Succes dovedit în SEO Local",
                desc: "Avem peste 10 ani de experiență în gestionarea listărilor și construirea semnalelor de încredere care aduc rezultate reale.",
                icon: "ri-medal-line",
            },
            {
                title: "Expertiză orientată către client",
                desc: "De peste 5 ani lucrăm cot la cot cu afacerile locale pentru a depăși orice provocare de vizibilitate și reputație.",
                icon: "ri-customer-service-line",
            },
            {
                title: "Strategii pregătite pentru viitor",
                desc: "Suntem specializați în vizibilitate GEO și SGE, ajutând afacerea ta să rămână relevantă în fața noilor tendințe AI.",
                icon: "ri-rocket-line",
            },
            {
                title: "Generare de lead-uri locale",
                desc: "Strategiile noastre bazate pe date sunt create pentru a transforma prezența ta online într-o sursă constantă de clienți noi.",
                icon: "ri-line-chart-line",
            },
        ],
    },
};

const t = content[lang as keyof typeof content] || content.en;
const TitleTag = headingLevel as any;
---

<div>
    {
        showHeader && (
            <TitleTag
                class={`font-bold text-gray-900 mb-6 ${isGrid ? "text-3xl text-center" : "text-xl font-pacifico"}`}
            >
                {t.title}
            </TitleTag>
        )
    }

    {
        isGrid ? (
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                {t.items.map((item) => (
                    <div class="text-center transform hover:-translate-y-2 transition-transform duration-300">
                        <div class="w-16 h-16 flex items-center justify-center bg-gradient-to-br from-purple-100 to-pink-100 rounded-full mx-auto mb-6">
                            <i class={`${item.icon} icon-gradient text-3xl`} />
                        </div>
                        <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
                        <p class="text-gray-600">{item.desc}</p>
                    </div>
                ))}
            </div>
        ) : (
            <div class="grid gap-6">
                {t.items.map((item) => (
                    <div class="flex gap-4 items-start">
                        <div class="w-10 h-10 flex-shrink-0 rounded-full bg-purple-100 flex items-center justify-center">
                            <i class={`${item.icon} text-xl icon-gradient`} />
                        </div>
                        <div>
                            <h4 class="font-medium text-gray-900 mb-1">
                                {item.title}
                            </h4>
                            <p class="text-gray-700 text-sm">{item.desc}</p>
                        </div>
                    </div>
                ))}
            </div>
        )
    }
</div>
